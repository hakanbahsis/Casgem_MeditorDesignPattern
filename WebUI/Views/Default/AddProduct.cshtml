@model WebUI.MediatorPattern.Commands.CreateProductCommand
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni Ürün Ekleme</h1>
<hr />
<form method="post">
    <div class="input-group mb-3 border">
        <input type="text" asp-for="Name" class="form-control text-black" placeholder="Ürün Adı">
    </div>
    <div class="input-group mb-3 border">
        <input type="number" asp-for="Stock" class="form-control text-black" placeholder="Stok Adeti">
    </div>
    <button class="btn btn-success">Kaydet</button>
</form>

